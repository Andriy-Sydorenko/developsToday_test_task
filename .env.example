# Copy to `.env` and adjust as needed.

# ------------------------------------------------------------------------------
# App metadata
# ------------------------------------------------------------------------------
APP_NAME="Travel Planner API"
APP_DESCRIPTION="Python engineer test assessment - Travel Planner"

# ------------------------------------------------------------------------------
# Server (used by docker/entrypoint.sh to run uvicorn)
# ------------------------------------------------------------------------------
PORT=8000

# ------------------------------------------------------------------------------
# CORS
# Note: these are lists; pydantic-settings parses them from JSON strings.
# ------------------------------------------------------------------------------
ALLOWED_HOSTS='["*"]'
ALLOWED_METHODS='["*"]'
ALLOWED_HEADERS='["*"]'

# ------------------------------------------------------------------------------
# Database
# ------------------------------------------------------------------------------
DATABASE_URL=sqlite+aiosqlite:///./app.db

# ------------------------------------------------------------------------------
# Auth / JWT
# ------------------------------------------------------------------------------
# Do not use this value in production.
JWT_SECRET=dev-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ------------------------------------------------------------------------------
# Third-party API (Art Institute of Chicago) + cache (bonus)
# ------------------------------------------------------------------------------
ARTIC_API_BASE_URL=https://api.artic.edu/api/v1
ARTIC_API_TIMEOUT_SECONDS=10.0
ARTIC_CACHE_ENABLED=true
ARTIC_CACHE_TTL_SECONDS=300
ARTIC_CACHE_MAX_ENTRIES=1024

# ------------------------------------------------------------------------------
# Environment
# ------------------------------------------------------------------------------
IS_PRODUCTION=false
